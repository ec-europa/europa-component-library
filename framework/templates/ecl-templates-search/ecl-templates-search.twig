                  {% block options %}
                    <option value="all">All formats</option>
                    <option value="doc">Doc</option>
                    <option value="pdf">PDF</option>
                    <option value="web">Web</option>
                  {% endblock %}
                {% endembed %}
              {% endblock %}
            {% endembed %}
