{% from '@buttons-buttons' import button %}
{% from '@logos-logotype' import logoType %}
{% from '@lang-select-sites' import langSelectSite %}
{% from '@search-forms' import searchForm %}

<header class="site-header" role="banner">
  <div class="container-fluid site-header__container">
    {{ logoType('https://ec.europa.eu', 'Home - European Commission', 'site-header__logo') }}
    <section class="top-bar" aria-label="Site tools">
      <div class="top-bar__wrapper">
        {{ langSelectSite() }}
        <section class="block-nexteuropa-europa-search clearfix">
          <div class="block__content">
            {{ searchForm() }}
          </div>
        </section>
        <section class="site-menu__toggle">
          {{ button('Menu', 'menu') }}
        </section>
      </div>
    </section>
  </div>
</header>
