<header class="site-header" role="banner">
  <div class="container-fluid site-header__container">
    {% include '@ec-europa/ecl-logos' with { 'to': 'https://ec.europa.eu', 'title': 'Home - European Commission', 'type': 'right', 'externalClass': 'site-header__logo' } %}
    <section class="top-bar" aria-label="Site tools">
      <div class="top-bar__wrapper">
        {% include '@ec-europa/ecl-lang-select-sites' %}
        <section class="block-nexteuropa-europa-search clearfix">
          <div class="block__content">
            {% include '@ec-europa/ecl-search-forms' %}
          </div>
        </section>
        <section class="site-menu__toggle">
          {% include '@ec-europa/ecl-buttons-buttons' with { 'label': 'Menu', 'modifier': 'menu' } %}
        </section>
      </div>
    </section>
  </div>
</header>
