{#
  - variant: can be '','external','standalone', 'inverted', 'all', 'more' (default: '')
  - href: target of the link (default: '')
  - label: label of the link (default: '')
#}

{# Internal properties #}

{% set _css_class = 'ecl-link' ~ (variant != '' ? ' ecl-link--' ~ variant: '') %}
{% set _extra_attributes = '' %}

{# Internal logic - Process properties #}

{% if extra_class is defined %}
  {% set _css_class = _css_class ~ ' ' ~ extra_class %}
{% endif %}

{% if extra_attributes is defined %}
  {% for attr in extra_attributes %}
    {% set _extra_attributes = _extra_attributes ~ ' ' ~ attr.name ~ '="' ~ attr.value ~ '"' %}
  {% endfor %}
{% endif %}

{# Print result #}
<a class="{{ _css_class }}" {{ _extra_attributes }} href="{{href}}">{{label}}</a>
