{
  "name": "@ec-europa/ecl-ec-styleguide",
  "author": "European Commission",
  "license": "EUPL-1.1",
  "version": "0.0.1",
  "description": "ECL EC Styleguide based on Fractal",
  "scripts": {
    "build:copy": "ecl-builder copy",
    "build:scripts": "ecl-builder scripts",
    "build:styles": "ecl-builder styles",
    "build": "npm-run-all --parallel build:* -ln",
    "clean": "rimraf build dist ../../../static/flavors",
    "dist": "npm run clean && ./node_modules/.bin/fractal build && cross-env NODE_ENV=production npm run build",
    "lint:js": "eslint .",
    "lint:scss": "stylelint \"../../../src/flavors/**/*.scss\"",
    "lint": "npm-run-all --parallel lint:* -cln",
    "serve": "fractal start --sync",
    "start": "npm-run-all clean build --parallel serve watch",
    "test:coding-conventions": "npm run lint",
    "test:functional": "wdio test/wdio.conf.js",
    "watch:scripts": "chokidar \"../../../src/flavors/**/*.js\" -i \"/node_modules/\" -c \"eslint {path} & npm run build:scripts\"",
    "watch:styles": "chokidar \"../../../src/flavors/**/*.scss\" -i \"/node_modules/\" -c \"stylelint {path} & npm run build:styles\"",
    "watch": "npm-run-all --parallel watch:* -ln"
  },
  "devDependencies": {
    "@ec-europa/ecl-builder": "0.12.4",
    "@ec-europa/ecl-fractal-theme": "0.12.0",
    "@ec-europa/ecl-qa": "0.3.7",
    "@ec-europa/eslint-config-ecl": "0.4.7",
    "@ec-europa/stylelint-config-ecl": "0.7.1",
    "@frctl/fractal": "1.1.7",
    "@frctl/twig": "1.0.0-beta.2",
    "chai": "4.1.2",
    "chokidar-cli": "1.2.0",
    "cross-env": "5.1.1",
    "dotenv": "4.0.0",
    "eslint": "4.13.1",
    "glob": "7.1.2",
    "husky": "0.14.3",
    "lint-staged": "6.0.0",
    "npm-run-all": "4.1.2",
    "prettier": "1.9.2",
    "rimraf": "2.6.2",
    "stylelint": "8.4.0",
    "stylelint-config-prettier": "2.0.0",
    "wdio-mocha-framework": "0.5.11",
    "wdio-sauce-service": "0.4.4",
    "wdio-screenshot": "0.6.0",
    "wdio-selenium-standalone-service": "0.0.9",
    "wdio-spec-reporter": "0.1.3",
    "wdio-static-server-service": "1.0.1",
    "wdio-visual-regression-service": "0.8.0",
    "webdriverio": "4.9.9"
  },
  "main": "fractal.js",
  "fractal": {
    "main": "fractal.js"
  },
  "private": "true",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ec-europa/europa-component-library.git"
  },
  "bugs": {
    "url": "https://github.com/ec-europa/europa-component-library/issues"
  },
  "homepage": "https://github.com/ec-europa/europa-component-library#readme"
}
