{
  "name": "@ec-europa/ecl-ec-styleguide",
  "author": "European Commission",
  "license": "EUPL-1.1",
  "version": "0.0.1",
  "description": "ECL EC Styleguide based on Fractal",
  "scripts": {
    "build:copy": "ecl-builder copy",
    "build:scripts": "ecl-builder scripts",
    "build:styles": "ecl-builder styles",
    "build": "run-p build:* -ln",
    "clean": "rm -rf ./static/images ./static/scripts ./static/styles ./static/fonts",
    "serve": "fractal start --sync",
    "start": "npm-run-all clean build --parallel serve watch",
    "watch:scripts": "chokidar \"../../../src/systems/ec/**/*.js\" -i \"/node_modules/\" -c \"eslint {path} & npm run build:scripts\"",
    "watch:styles": "chokidar \"../../../src/systems/ec/**/*.scss\" -i \"/node_modules/\" -c \"stylelint {path} & npm run build:styles\"",
    "watch": "npm-run-all --parallel watch:* -ln"
  },
  "devDependencies": {
    "@ec-europa/ecl-builder": "0.14.0",
    "@ec-europa/ecl-fractal-theme": "^0.13.2",
    "@ec-europa/ecl-qa": "0.4.0",
    "@ec-europa/eslint-config-ecl": "0.5.0",
    "@ec-europa/stylelint-config-ecl": "0.8.0",
    "@frctl/fractal": "1.1.7",
    "@frctl/twig": "1.0.0-beta.2",
    "chokidar-cli": "1.2.0",
    "cross-env": "5.1.4",
    "eslint": "4.18.2",
    "npm-run-all": "4.1.2",
    "stylelint": "9.1.1",
    "stylelint-config-prettier": "3.0.4"
  },
  "main": "fractal.js",
  "fractal": {
    "main": "fractal.js"
  },
  "private": "true",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ec-europa/europa-component-library.git"
  },
  "bugs": {
    "url": "https://github.com/ec-europa/europa-component-library/issues"
  },
  "homepage": "https://github.com/ec-europa/europa-component-library#readme"
}
