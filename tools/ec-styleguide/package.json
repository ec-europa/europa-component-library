{
  "private": "true",
  "name": "@ecl/ec-styleguide",
  "author": "European Commission",
  "license": "EUPL-1.1",
  "version": "0.0.1",
  "description": "ECL EC Styleguide based on Fractal",
  "scripts": {
    "build":
      "cd ../../src/systems/ec/ec-preset/ec-preset-full && npm run build",
    "clean": "rm -rf ./static/ec-preset-full",
    "dist": "fractal build",
    "postinstall":
      "copyfiles -f '../../node_modules/@ecl/generic-*/**/*.twig' ../../src/systems/ec/_imports",
    "serve": "fractal start --sync",
    "start": "npm-run-all clean build --parallel serve watch",
    "watch": "cd ../../src/systems/ec/ec-preset/ec-preset-full && npm run watch"
  },
  "devDependencies": {
    "@ecl/ec-preset-full": "^0.0.1",
    "@ecl/fractal-theme": "^0.0.1",
    "@ecl/fractal-twig": "^0.0.1",
    "@frctl/fractal": "1.1.7",
    "copyfiles": "2.0.0",
    "npm-run-all": "4.1.2",
    "symlink-or-copy": "1.2.0"
  },
  "main": "fractal.js",
  "fractal": {
    "main": "fractal.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ec-europa/europa-component-library.git"
  },
  "bugs": {
    "url": "https://github.com/ec-europa/europa-component-library/issues"
  },
  "homepage": "https://github.com/ec-europa/europa-component-library#readme"
}
