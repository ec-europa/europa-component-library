{
  "name": "@ec-europa/europa-component-library",
  "author": "ec-europa",
  "license": "EUPL-1.1",
  "version": "0.0.1",
  "description": "Europa Component Library",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build:copy": "node ./scripts/copy.js",
    "build:scripts": "rollup --config ./rollup.config.js",
    "build:search": "node ./scripts/search.js",
    "build:styles": "node-sass ./framework/index.scss --include-path node_modules | postcss -c postcss.config.js",
    "build": "npm-run-all --parallel build:*",
    "clean": "rimraf tmp build dist static/framework",
    "dist": "npm run clean && fractal build && cross-env NODE_ENV=production npm run build",
    "gh-pages": "gh-pages -d dist",
    "lint:js": "eslint .",
    "lint:scss": "stylelint './framework/**/*.scss'",
    "lint": "npm-run-all --parallel lint:* -c",
    "precommit": "lint-staged",
    "serve": "fractal start --sync",
    "start": "npm-run-all clean build --parallel serve watch",
    "test:coding-conventions": "npm run lint",
    "test:functional": "wdio test/wdio.conf.js",
    "watch:scripts": "chokidar './framework/**/*.js' -c 'eslint {path} && npm run build:scripts'",
    "watch:styles": "chokidar './framework/**/*.scss' -c 'stylelint {path} || true && npm run build:styles'",
    "watch": "npm-run-all --parallel watch:*"
  },
  "devDependencies": {
    "@frctl/fractal": "1.1.4",
    "@frctl/mandelbrot": "1.1.0",
    "@frctl/twig": "1.0.0-alpha.0",
    "autoprefixer": "6.7.7",
    "axe-core": "2.1.7",
    "babel-eslint": "7.2.2",
    "babel-preset-es2015-rollup": "3.0.0",
    "chai": "3.5.0",
    "chokidar-cli": "1.2.0",
    "cross-env": "4.0.0",
    "cssnano": "3.10.0",
    "dotenv": "4.0.0",
    "eslint": "3.19.0",
    "eslint-config-airbnb-base": "11.1.3",
    "eslint-plugin-import": "2.2.0",
    "fs-extra": "2.1.2",
    "gh-pages": "0.12.0",
    "html-inspector": "0.8.2",
    "husky": "0.13.3",
    "lerna": "2.0.0-rc.3",
    "lint-staged": "3.4.0",
    "node-sass": "4.5.2",
    "npm-run-all": "4.0.2",
    "postcss": "5.2.17",
    "postcss-cli": "3.1.1",
    "rimraf": "2.6.1",
    "rollup": "0.41.6",
    "rollup-plugin-babel": "2.7.1",
    "rollup-plugin-commonjs": "8.0.2",
    "rollup-plugin-node-resolve": "3.0.0",
    "rollup-plugin-uglify": "1.0.1",
    "stylelint": "7.10.1",
    "stylelint-config-sass-guidelines": "2.1.0",
    "stylelint-config-standard": "16.0.0",
    "stylelint-selector-bem-pattern": "1.0.0",
    "wdio-mocha-framework": "0.5.9",
    "wdio-sauce-service": "0.3.1",
    "wdio-screenshot": "0.5.2",
    "wdio-selenium-standalone-service": "0.0.8",
    "wdio-static-server-service": "1.0.1",
    "wdio-visual-regression-service": "0.7.0",
    "webdriverio": "4.6.2"
  },
  "dependencies": {
    "lunr": "2.0.2"
  },
  "engines": {
    "node": ">=6.9.5"
  }
}
