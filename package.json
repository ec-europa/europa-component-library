{
  "private": true,
  "author": "European Commission",
  "license": "EUPL-1.2",
  "description": "Europa Component Library",
  "scripts": {
    "changelog": "lerna-changelog",
    "clean": "rimraf dist",
    "browserstats": "./src/tools/builder/bin/build.js browsers",
    "build:icons": "lerna --scope \"@ecl/resources-*\" run dist",
    "build:presets": "lerna --scope \"@ecl/preset-*\" run dist",
    "build:themes": "lerna --scope \"@ecl/theme-*\" run build",
    "dist:presets": "npm run build:presets && ./scripts/dist-presets.sh",
    "dist:storybook": "./scripts/dist-storybook.sh",
    "dist:website": "./scripts/dist-website.sh",
    "dist": "npm run clean && npm run browserstats && npm run dist:presets && npm run dist:storybook && npm run dist:website",
    "lint:js": "eslint . --ext .js --ext .jsx",
    "lint:scss": "stylelint \"./src/**/*.scss\"",
    "lint": "npm-run-all --parallel lint:* -cln",
    "prepare": "npx husky install",
    "postinstall": "patch-package && [ -z \"$NOYARNPOSTINSTALL\" ] && (lerna run postinstall && lerna run prepublish) || echo \"Bypass prepublish\"",
    "pretty-check": "prettier --check \"src/**/*.{md,mdx,html,json,yml,js,jsx,scss,svg}\"",
    "pretty-write": "prettier --write \"src/**/*.{md,mdx,html,json,yml,js,jsx,scss,svg}\"",
    "publish": "scripts/publish.sh",
    "serve": "cd src/website && npm run serve",
    "size": "npm run dist:presets && size-limit",
    "start:ec": "(cd src/presets/ec && npm run watch) & cd src/playground/ec && npm run start",
    "start:eu": "(cd src/presets/eu && npm run watch) & cd src/playground/eu && npm run start",
    "start:website": "cd src/website && npm run start",
    "test": "run-p test:*",
    "test:components": "jest --verbose",
    "test:coding-conventions": "npm run lint && npm run pretty-check",
    "update-version": "scripts/update-version.sh"
  },
  "devDependencies": {
    "@babel/eslint-parser": "7.23.3",
    "@babel/plugin-proposal-export-default-from": "7.23.3",
    "@babel/plugin-transform-runtime": "7.23.6",
    "@prettier/plugin-xml": "3.2.2",
    "@size-limit/preset-big-lib": "11.0.1",
    "babel-jest": "29.7.0",
    "classnames": "2.3.2",
    "eslint": "8.56.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-jest": "27.6.0",
    "eslint-plugin-jsx-a11y": "6.8.0",
    "eslint-plugin-prettier": "5.0.1",
    "eslint-plugin-react": "7.33.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "glob": "7.2.0",
    "husky": "8.0.3",
    "jest": "29.7.0",
    "jest-axe": "8.0.0",
    "jest-environment-jsdom": "29.7.0",
    "lerna": "8.0.1",
    "lerna-changelog": "2.2.0",
    "lint-staged": "15.2.0",
    "npm-run-all": "4.1.5",
    "patch-package": "8.0.0",
    "postinstall-postinstall": "2.1.0",
    "prettier": "3.1.1",
    "prop-types": "15.8.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "rimraf": "5.0.5",
    "size-limit": "11.0.1",
    "ssri": "10.0.5",
    "stylelint": "15.11.0",
    "stylelint-config-css-modules": "4.3.0",
    "stylelint-config-prettier": "9.0.5",
    "stylelint-config-standard": "34.0.0",
    "stylelint-config-standard-scss": "11.1.0",
    "stylelint-order": "6.0.4",
    "stylelint-scss": "5.3.2",
    "svg4everybody": "2.1.9"
  },
  "resolutions": {
    "serialize-javascript": ">=3.1.0",
    "trim": ">=0.0.3",
    "glob-parent": ">=5.1.2",
    "strip-ansi": "6.0.1",
    "ansi-html": ">=0.0.8",
    "follow-redirects": ">=1.14.7",
    "node-fetch": "2.6.7",
    "immer": ">=9.0.21",
    "merge": ">=2.1.1",
    "browserslist": ">=4.16.5",
    "node-forge": ">=1.0.0",
    "nth-check": ">=2.0.1",
    "prismjs": ">=1.27.0",
    "minimist": ">=1.2.6",
    "simple-git": ">=3.3.0",
    "portscanner": ">=2.2.0",
    "parse-path": ">=5.0.0",
    "parse-url": ">=8.1.0",
    "qs": ">=6.2.4",
    "json5": ">=2.2.2",
    "ua-parser-js": ">=1.0.33",
    "http-cache-semantics": ">=4.1.1",
    "webpack": ">=5.76.3",
    "yaml": ">=2.2.2",
    "puppeteer": "10.4.0",
    "loader-utils": "2.0.4",
    "lodash": ">=4.17.21",
    "semver": ">=7.5.2",
    "word-wrap": "aashutoshrathi/word-wrap",
    "postcss": ">=8.4.31",
    "@babel/traverse": ">=7.23.2",
    "axios": ">=1.6.0"
  },
  "engines": {
    "node": ">=12.0.0",
    "yarn": ">=1.0.0"
  },
  "lint-staged": {
    "*.{md,mdx,html,json,yml,svg}": [
      "prettier --write"
    ],
    "*.{js,jsx}": [
      "prettier --write",
      "eslint"
    ],
    "*.scss": [
      "prettier --write",
      "stylelint"
    ]
  },
  "workspaces": [
    "src/implementations/**",
    "src/playground/**",
    "!src/playground/**/build",
    "src/resources/*",
    "src/specs/**",
    "src/themes/*",
    "src/presets/*",
    "src/tools/*",
    "src/website"
  ],
  "jest": {
    "verbose": true,
    "testEnvironment": "jsdom"
  },
  "apps": {
    "storybook-ec": {
      "protocol": "http",
      "port": 6006,
      "host": "localhost"
    },
    "storybook-eu": {
      "protocol": "http",
      "port": 6007,
      "host": "localhost"
    }
  }
}
