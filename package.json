{
  "private": true,
  "author": "European Commission",
  "license": "EUPL-1.1",
  "description": "Europa Component Library",
  "scripts": {
    "changelog": "lerna-changelog",
    "clean": "rimraf dist",
    "dist:presets": "./scripts/dist-presets.sh",
    "dist:styleguides": "./scripts/dist-styleguides.sh",
    "dist": "npm run clean && npm run dist:presets && npm run dist:styleguides",
    "gh-pages": "gh-pages -d dist/website",
    "lint:js": "eslint .",
    "lint:scss": "stylelint \"./src/**/*.scss\"",
    "lint": "npm-run-all --parallel lint:* -cln",
    "postinstall": "lerna run postinstall && lerna run prepublish",
    "precommit": "lint-staged",
    "publish": "scripts/release.sh",
    "start:ec": "cd tools/ec-styleguide && npm run start",
    "start:eu": "cd tools/eu-styleguide && npm run start",
    "test:coding-conventions": "npm run lint",
    "test:functional": "node ./scripts/test-functional.js",
    "test:independent-sass": "lerna run --parallel test:independent-sass",
    "updated": "node ./scripts/lerna-updated"
  },
  "devDependencies": {
    "@ecl/eslint-config": "0.1.2",
    "@ecl/qa": "0.2.1",
    "@ecl/stylelint-config": "0.2.1",
    "@octokit/rest": "16.28.5",
    "chai": "4.2.0",
    "dotenv": "7.0.0",
    "eslint": "4.19.1",
    "gh-pages": "1.1.0",
    "glob": "7.1.4",
    "husky": "0.14.3",
    "lerna": "2.11.0",
    "lerna-changelog": "0.7.0",
    "lint-staged": "7.1.2",
    "minimist": "1.2.0",
    "mkdirp": "0.5.1",
    "npm-run-all": "4.1.5",
    "npmlog": "4.1.2",
    "prettier": "1.18.2",
    "rimraf": "2.6.3",
    "simple-git": "1.122.0",
    "stylelint": "9.10.1",
    "wdio-mocha-framework": "0.5.13",
    "wdio-sauce-service": "0.4.14",
    "wdio-screenshot": "0.6.0",
    "wdio-selenium-standalone-service": "0.0.10",
    "wdio-spec-reporter": "0.1.5",
    "wdio-static-server-service": "1.0.1",
    "wdio-visual-regression-service": "0.9.0",
    "webdriverio": "4.12.0"
  },
  "engines": {
    "node": ">=8.9.1"
  },
  "lint-staged": {
    "*.md": [
      "prettier --parser markdown --write",
      "git add"
    ],
    "*.js": [
      "prettier --parser babylon --write",
      "eslint",
      "git add"
    ],
    "*.json": [
      "prettier --parser json --write",
      "git add"
    ],
    "*.scss": [
      "prettier --parser scss --write",
      "stylelint",
      "git add"
    ]
  },
  "workspaces": [
    "examples/*",
    "src/generic/*",
    "src/systems/ec/ec-base",
    "src/systems/ec/ec-component/**",
    "src/systems/ec/ec-layout/*",
    "src/systems/ec/ec-preset/*",
    "src/systems/ec/ec-style/**",
    "src/systems/ec/ec-template/*",
    "src/systems/ec/ec-utility/*",
    "src/systems/eu/eu-base",
    "src/systems/eu/eu-component/**",
    "src/systems/eu/eu-layout/*",
    "src/systems/eu/eu-preset/*",
    "src/systems/eu/eu-style/**",
    "src/systems/eu/eu-template/*",
    "src/systems/eu/eu-utility/*",
    "tools/*"
  ]
}
