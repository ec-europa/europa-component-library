{
  "name": "@ec-europa/europa-component-library",
  "author": "ec-europa",
  "license": "EUPL-1.1",
  "version": "0.0.1",
  "description": "Europa Component Library",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build:copy": "ecl-builder copy",
    "build:scripts": "ecl-builder scripts",
    "build:styles": "ecl-builder styles",
    "build": "npm-run-all --parallel build:*",
    "clean": "rimraf tmp build dist static/framework",
    "dist": "npm run clean && fractal build && cross-env NODE_ENV=production npm run build",
    "gh-pages": "gh-pages -d dist",
    "lint:js": "eslint .",
    "lint:scss": "stylelint './framework/**/*.scss'",
    "lint": "npm-run-all --parallel lint:* -c",
    "precommit": "lint-staged",
    "serve": "fractal start --sync",
    "start": "npm-run-all clean build --parallel serve watch",
    "test:coding-conventions": "npm run lint",
    "test:functional": "wdio test/wdio.conf.js",
    "watch:scripts": "chokidar './framework/**/*.js' -c 'eslint {path} && npm run build:scripts'",
    "watch:styles": "chokidar './framework/**/*.scss' -c 'stylelint {path} || true && npm run build:styles'",
    "watch": "npm-run-all --parallel watch:*"
  },
  "devDependencies": {
    "@ec-europa/ecl-builder": "0.1.0",
    "@ec-europa/ecl-fractal-theme": "0.1.0",
    "@ec-europa/ecl-qa": "0.1.0",
    "@ec-europa/eslint-config-ecl": "0.1.0",
    "@ec-europa/stylelint-config-ecl": "0.1.0",
    "@frctl/fractal": "1.1.4",
    "@frctl/twig": "1.0.0-alpha.0",
    "chai": "3.5.0",
    "chokidar-cli": "1.2.0",
    "cross-env": "4.0.0",
    "dotenv": "4.0.0",
    "eslint": "3.19.0",
    "gh-pages": "0.12.0",
    "husky": "0.13.3",
    "lerna": "2.0.0-rc.2",
    "lint-staged": "3.4.0",
    "npm-run-all": "4.0.2",
    "rimraf": "2.6.1",
    "stylelint": "7.10.1",
    "wdio-mocha-framework": "0.5.9",
    "wdio-sauce-service": "0.3.1",
    "wdio-screenshot": "0.5.2",
    "wdio-selenium-standalone-service": "0.0.8",
    "wdio-static-server-service": "1.0.1",
    "wdio-visual-regression-service": "0.7.0",
    "webdriverio": "4.6.2"
  },
  "engines": {
    "node": ">=6.9.5"
  }
}
