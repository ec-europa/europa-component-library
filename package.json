{
  "private": true,
  "author": "European Commission",
  "license": "EUPL-1.1",
  "description": "Europa Component Library",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build:copy": "ecl-builder copy",
    "build:scripts": "ecl-builder scripts",
    "build:styles": "ecl-builder styles",
    "build": "npm-run-all --parallel build:*",
    "changelog": "lerna-changelog",
    "clean": "rimraf tmp build dist static/framework",
    "dist": "npm run clean && ./node_modules/.bin/fractal build && cross-env NODE_ENV=production npm run build",
    "fix:js": "prettier-eslint --write \"**/*.js\"",
    "fix:scss": "stylefmt -r \"framework/**/*.scss\" -c \".stylelintrc.js\"",
    "fix": "npm-run-all --parallel fix:*",
    "gh-pages": "gh-pages -d dist",
    "lint:md": "remark . --quiet --frail",
    "lint:js": "eslint .",
    "lint:scss": "stylelint ./framework/**/*.scss",
    "lint": "npm-run-all --parallel lint:* -c",
    "postinstall": "npm run bootstrap",
    "precommit": "lint-staged",
    "publish": "scripts/release.sh",
    "serve": "fractal start --sync",
    "start": "npm-run-all clean build --parallel serve watch",
    "test:coding-conventions": "npm run lint",
    "test:functional": "wdio test/wdio.conf.js",
    "watch:scripts": "chokidar \"./framework/**/*.js\" -c \"eslint {path} & npm run build:scripts\"",
    "watch:styles": "chokidar \"./framework/**/*.scss\" -c \"stylelint {path} & npm run build:styles\"",
    "watch": "npm-run-all --parallel watch:*"
  },
  "devDependencies": {
    "@ec-europa/ecl-builder": "0.9.5",
    "@ec-europa/ecl-fractal-theme": "0.8.5",
    "@ec-europa/ecl-qa": "0.3.2",
    "@ec-europa/eslint-config-ecl": "0.4.1",
    "@ec-europa/stylelint-config-ecl": "0.5.0",
    "@frctl/fractal": "1.1.5",
    "@frctl/twig": "1.0.0-alpha.0",
    "chai": "4.1.0",
    "chokidar-cli": "1.2.0",
    "cross-env": "5.0.1",
    "dotenv": "4.0.0",
    "eslint": "4.3.0",
    "gh-pages": "1.0.0",
    "husky": "0.14.3",
    "lerna": "2.0.0",
    "lerna-changelog": "0.6.0",
    "lint-staged": "4.0.2",
    "npm-run-all": "4.0.2",
    "prettier-eslint-cli": "4.1.1",
    "remark-cli": "4.0.0",
    "remark-lint": "6.0.0",
    "remark-preset-lint-consistent": "2.0.0",
    "remark-preset-lint-markdown-style-guide": "2.0.0",
    "remark-preset-lint-recommended": "3.0.0",
    "rimraf": "2.6.1",
    "stylefmt": "6.0.0",
    "stylelint": "8.0.0",
    "wdio-mocha-framework": "0.5.10",
    "wdio-sauce-service": "0.4.0",
    "wdio-screenshot": "0.6.0",
    "wdio-selenium-standalone-service": "0.0.9",
    "wdio-static-server-service": "1.0.1",
    "wdio-visual-regression-service": "0.8.0",
    "webdriverio": "4.8.0"
  },
  "engines": {
    "node": ">=6.9.5"
  },
  "lint-staged": {
    "*.md": ["remark --quiet --frail --no-stdout"],
    "*.js": ["prettier-eslint --write", "git add"],
    "*.scss": ["stylelint"]
  }
}
