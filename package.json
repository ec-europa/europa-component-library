{
  "private": true,
  "author": "European Commission",
  "license": "EUPL-1.1",
  "description": "Europa Component Library",
  "scripts": {
    "changelog": "lerna-changelog",
    "clean": "rimraf dist",
    "dist": "scripts/styleguide.sh",
    "gh-pages": "gh-pages -d dist",
    "lint:js": "eslint .",
    "lint:scss": "stylelint \"./src/flavors/**/*.scss\"",
    "lint": "npm-run-all --parallel lint:* -cln",
    "precommit": "lint-staged",
    "publish": "scripts/release.sh",
    "start:ec": "cd packages/styleguides/ec && npm run start",
    "start:eu": "cd packages/styleguides/eu && npm run start",
    "test:coding-conventions": "npm run lint",
    "test:functional": "run-s test:functional:*",
    "test:functional:ec": "wdio test/wdio.conf.js",
    "test:functional:eu": "FLAVOR=eu wdio test/wdio.conf.js"
  },
  "devDependencies": {
    "@ec-europa/ecl-qa": "0.4.0",
    "@ec-europa/eslint-config-ecl": "0.5.0",
    "@ec-europa/stylelint-config-ecl": "0.8.0",
    "chai": "4.1.2",
    "chokidar-cli": "1.2.0",
    "cross-env": "5.1.3",
    "dotenv": "5.0.1",
    "eslint": "4.18.2",
    "gh-pages": "1.1.0",
    "glob": "7.1.2",
    "husky": "0.14.3",
    "lerna": "2.9.0",
    "lerna-changelog": "0.7.0",
    "lint-staged": "7.0.0",
    "npm-run-all": "4.1.2",
    "npmlog": "4.1.2",
    "prettier": "1.11.1",
    "rimraf": "2.6.2",
    "stylelint": "9.1.1",
    "stylelint-config-prettier": "2.1.0",
    "wdio-mocha-framework": "0.5.12",
    "wdio-sauce-service": "0.4.8",
    "wdio-screenshot": "0.6.0",
    "wdio-selenium-standalone-service": "0.0.9",
    "wdio-spec-reporter": "0.1.3",
    "wdio-static-server-service": "1.0.1",
    "wdio-visual-regression-service": "0.8.0",
    "webdriverio": "4.11.0"
  },
  "engines": {
    "node": ">=8.9.1"
  },
  "lint-staged": {
    "*.md": [
      "prettier --parser markdown --write",
      "git add"
    ],
    "*.js": [
      "prettier --parser babylon --write",
      "eslint",
      "git add"
    ],
    "*.json": [
      "prettier --parser json --write",
      "git add"
    ],
    "*.scss": [
      "prettier --parser scss --write",
      "stylelint"
    ]
  },
  "workspaces": [
    "demo/**",
    "packages/**",
    "src/generic/**",
    "src/flavors/ec/**",
    "src/flavors/eu/**"
  ]
}
