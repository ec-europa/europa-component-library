{
  "name": "@ec-europa/europa-component-library",
  "author": "ec-europa",
  "license": "EUPL-1.1",
  "version": "0.0.1",
  "description": "Europa Component Library",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build:copy": "node ./scripts/copy.js",
    "build:scripts": "rollup --config ./rollup.config.js",
    "build:styles": "node-sass ./framework/index.scss | postcss -c postcss.config.js",
    "build": "npm-run-all --parallel build:*",
    "clean": "rimraf tmp build dist static/framework",
    "commitmsg": "validate-commit-msg",
    "dist": "npm run clean && fractal build && NODE_ENV=production npm run build",
    "gemini:test": "gemini test --reporter html",
    "gemini:update": "gemini update",
    "gh-pages": "gh-pages -d dist",
    "lint:js": "eslint .",
    "lint:scss": "stylelint ./framework/**/*.scss",
    "lint": "npm-run-all --parallel lint:*",
    "precommit": "lint-staged",
    "serve": "fractal start --sync",
    "start": "npm-run-all clean build --parallel serve watch",
    "test:a11y": "a11y ./www/components/preview/**/*.html",
    "watch:scripts": "chokidar './framework/**/*.js' -c 'eslint {path} && npm run build:scripts'",
    "watch:styles": "chokidar './framework/**/*.scss' -c 'stylelint {path} && npm run build:styles'",
    "watch": "npm-run-all --parallel watch:*"
  },
  "devDependencies": {
    "@frctl/fractal": "1.1.0",
    "@frctl/mandelbrot": "1.1.0",
    "@frctl/nunjucks": "1.0.3",
    "a11y": "0.4.1",
    "autoprefixer": "6.7.2",
    "babel-eslint": "7.1.1",
    "babel-preset-es2015-rollup": "3.0.0",
    "chokidar-cli": "1.2.0",
    "cssnano": "3.10.0",
    "eslint": "3.14.1",
    "eslint-config-airbnb-base": "11.0.1",
    "eslint-plugin-import": "2.2.0",
    "fs-extra": "^2.0.0",
    "gemini": "4.17.1",
    "gh-pages": "^0.12.0",
    "husky": "0.13.1",
    "lerna": "2.0.0-beta.35",
    "lint-staged": "3.3.0",
    "node-sass": "4.5.0",
    "npm-run-all": "4.0.1",
    "postcss": "5.2.11",
    "postcss-cli": "2.6.0",
    "rimraf": "2.5.4",
    "rollup": "0.41.4",
    "rollup-plugin-babel": "2.7.1",
    "rollup-plugin-commonjs": "7.0.0",
    "rollup-plugin-node-resolve": "2.0.0",
    "rollup-plugin-uglify": "1.0.1",
    "stylelint": "7.7.1",
    "stylelint-config-sass-guidelines": "1.1.1",
    "stylelint-config-standard": "15.0.1",
    "validate-commit-msg": "2.11.1"
  },
  "dependencies": {
    "bootstrap-sass": "3.3.7"
  }
}
