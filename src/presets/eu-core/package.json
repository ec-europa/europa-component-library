{
  "name": "@ecl/preset-eu-core",
  "author": "European Commission",
  "license": "EUPL-1.1",
  "version": "3.0.0",
  "description": "ECL EU Core preset",
  "main": "dist/scripts/eu-core.js",
  "style": "dist/styles/eu-core.css",
  "private": true,
  "scripts": {
    "build:copy": "ecl-builder copy",
    "build:scripts": "ecl-builder scripts",
    "build:styles": "cross-env ECL_SYSTEM=eu ecl-builder styles",
    "build": "run-p build:*",
    "clean": "rimraf build dist",
    "dist": "cross-env NODE_ENV=production run-p build:*",
    "watch:scripts": "chokidar \"../../implementations/vanilla/**/*.js\" \"../**/*.js\" -i \"/node_modules|build|dist|config\\.js/\" -c \"npm run build:scripts\"",
    "watch:styles": "cross-env ECL_SYSTEM=eu chokidar \"../../implementations/vanilla/**/*.scss\" \"../../../../themes/**/*.scss\" \"../**/*.scss\" -i \"/node_modules|build|dist/\" -c \"npm run build:styles\"",
    "watch": "run-p watch:*",
    "prepublish": "npm run clean && run-p build dist"
  },
  "devDependencies": {
    "@ecl/builder": "^3.0.0",
    "@ecl/preset-dev": "^3.0.0",
    "@ecl/resources-ec-icons": "^3.0.0",
    "@ecl/resources-eu-logo": "^3.0.0",
    "@ecl/theme-dev": "^3.0.0",
    "cross-env": "7.0.2",
    "npm-run-all": "4.1.5",
    "rimraf": "3.0.2"
  },
  "keywords": [
    "ecl",
    "europa-component-library",
    "design-system"
  ],
  "homepage": "https://github.com/ec-europa/europa-component-library",
  "bugs": {
    "url": "https://github.com/ec-europa/europa-component-library/issues"
  }
}
