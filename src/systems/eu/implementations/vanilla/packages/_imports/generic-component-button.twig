{#
  Parameters:
    - "modifier" (string, "default", "primary", "secondary", "call", "form", "form-primary" or "splash-page") (default: "default")
    - "type" (string): deprecated
    - "type_attribute" (string) (default: "submit")
    - "href" (string) (default: ''): display button as a link, with this href
    - "icon" (object) (default: {}): object of type ecl-icon
    - "label" (string) (default: "")
    - "is_block" (boolean): block-wide button (default: false)
    - "extra_classes" (string) (default: '')
    - "extra_attributes" (array) (default: []): format: [
        {
          "name" (string) (default: ''),
          "value" (string) (default: '')
        },
        ...
      ]
    - "system" (string) (default: "generic")
  Blocks:
    - "link_label_block": block label of the button (when "type" == "link")
    - "button_label_block": block label of the button (when "type" == "button")
#}

{# Internal properties #}

{% set _modifier = modifier|default('default') %}
{% set _type_attribute = type_attribute|default('submit') %}
{% set _icon = icon|default({}) %}
{% set _label = label|default('') %}
{% set _href = href|default('') %}
{% set _is_block = is_block|default(false) %}
{% set _css_class = 'ecl-button ecl-button--' ~ _modifier %}
{% set _extra_attributes = '' %}
{% set _system = system|default('generic') %}

{# Internal logic - Process properties #}

{% if _is_block == true %}
  {% set _css_class = _css_class ~ ' ecl-button--block' %}
{% endif %}

{% if extra_classes is defined and extra_classes is not empty %}
  {% set _css_class = _css_class ~ ' ' ~ extra_classes %}
{% endif %}

{% if extra_attributes is defined and extra_attributes is not empty and extra_attributes is iterable %}
  {% for attr in extra_attributes %}
    {% set _extra_attributes = _extra_attributes ~ ' ' ~ attr.name ~ '="' ~ attr.value ~ '"' %}
  {% endfor %}
{% endif %}

{# Print the result #}

{% if _href != '' %}

<a href="{{ _href }}" class="{{ _css_class }}"{{ _extra_attributes|raw }}>
  <span class="ecl-button__container">
    <span class="ecl-button__label ecl-expandable__label">
    {% block link_label_block _label|raw %}
    </span>

    {% if _icon is not empty %}
    <span class="ecl-button__icon ecl-expandable__icon">
    {% include '@ecl/' ~ _system ~ '-style-icon' with _icon only %}
    </span>
    {% endif %}
  </span>
</a>

{% else %}

<button type="{{ _type_attribute }}" class="{{ _css_class }}"{{ _extra_attributes|raw }}>
  <span class="ecl-button__container">
    <span class="ecl-button__label ecl-expandable__label">
    {% block button_label_block _label|raw %}
    </span>

    {% if _icon is not empty %}
    <span class="ecl-button__icon ecl-expandable__icon">
    {% include '@ecl/' ~ _system ~ '-style-icon' with _icon only %}
    </span>
    {% endif %}
  </span>
</button>

{% endif %}
