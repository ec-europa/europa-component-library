{
  "name": "@ecl/eu-preset-legacy-website",
  "author": "European Commission",
  "license": "EUPL-1.1",
  "version": "2.28.0",
  "description": "ECL EU Legacy Website preset",
  "main": "dist/scripts/ecl-eu-preset-legacy-website.js",
  "style": "dist/styles/ecl-eu-preset-legacy-website.css",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build:copy": "ecl-builder copy",
    "build:scripts": "ecl-builder scripts",
    "build:styles": "ecl-builder styles",
    "build": "rimraf build && run-p build:* -ln",
    "clean": "rimraf build dist",
    "dist": "npm run clean && cross-env NODE_ENV=production run-p build:* -ln",
    "watch:scripts": "chokidar \"../../../../generic/**/*.js\" \"../../**/*.js\" -i \"/node_modules|build|dist|config\\.js/\" -c \"npm run build:scripts\"",
    "watch:styles": "chokidar \"../../../../generic/**/*.scss\" \"../../**/*.scss\" -i \"/node_modules|build|dist/\" -c \"npm run build:styles\"",
    "watch": "npm-run-all --parallel watch:* -ln",
    "prepublish": "npm run dist"
  },
  "devDependencies": {
    "@ecl/builder": "^2.28.0",
    "@ecl/eu-component-accordion": "^2.28.0",
    "@ecl/eu-component-dropdown-legacy": "^2.28.0",
    "@ecl/eu-component-list": "^2.28.0",
    "@ecl/eu-component-menu-legacy": "^2.28.0",
    "@ecl/eu-component-skip-link": "^2.28.0",
    "@ecl/eu-component-timeline": "^2.28.0",
    "@ecl/eu-preset-dev": "^2.28.0",
    "@ecl/eu-resources-icons": "^2.28.0",
    "@ecl/eu-resources-logo": "^2.28.0",
    "@ecl/eu-theme-default": "^2.28.0",
    "@ecl/eu-utility-colorize": "^2.28.0",
    "@ecl/eu-utility-font-size": "^2.28.0",
    "@ecl/eu-utility-text": "^2.28.0",
    "chokidar-cli": "2.1.0",
    "cross-env": "7.0.2",
    "normalize.css": "8.0.1",
    "npm-run-all": "4.1.5",
    "rimraf": "3.0.2"
  },
  "keywords": [
    "ecl",
    "europa-component-library",
    "design-system"
  ],
  "homepage": "https://github.com/ec-europa/europa-component-library",
  "bugs": {
    "url": "https://github.com/ec-europa/europa-component-library/issues"
  }
}
