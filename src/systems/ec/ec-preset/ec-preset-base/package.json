  },
  "devDependencies": {
    "@ecl/builder": "0.1.1",
    "cross-env": "5.1.4",
    "npm-run-all": "4.1.2",
    "rimraf": "2.6.2"
  },
  "keywords": ["ecl", "europa-component-library", "design-system"],
  "homepage": "https://github.com/ec-europa/europa-component-library",
