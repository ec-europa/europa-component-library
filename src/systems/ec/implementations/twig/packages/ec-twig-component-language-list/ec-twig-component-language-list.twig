{#
  Parameters:
    - "variant" (string) (default: 'splash'): can be 'splash' or 'overlay'
    - "link" (string) (default: '#'): the link for the lang-select-sites
    - "icon" (object) (default: {}): object of type ecl-icon; used for active language
    - "icon_close" (object) (default: {}): object of type ecl-icon; used for close button
    - "icon_language" (object) (default: {}): object of type ecl-icon; used for language icon
    - "icon_language_generic" (object) (default: {}): object of type ecl-icon; used for generic language icon
    - "logo" (object) (default: {}): object of type ecl-logo
    {
      "type" (string)
    - "title" (string)
    - "href" (string)
    }
    - "languages" (array) (default: []): array of languages to display, format [
        {
          "href" (string),
          "hreflang" (string),
          "label" (string),
          "lang" (string)
        },
        ...
      ]
    - "messages" (object): shape of
      {
        "dismiss" (string) (default: 'Close'),
        "heading" (string) (default: 'Select your language')
      }
    - "extra_classes" (string) (default: '')
    - "extra_attributes" (array) (default: []): format: [
        {
          "name" (string) (default: ''),
          "value" (string) (default: '')
        },
        ...
      ]
    - "system" (string) (default: "generic")
#}

{% include '@ecl/generic-twig-component-language-list' with {
  'variant': variant|default('splash'),
  'link': link|default('#'),
  'icon': icon|default({}),
  'icon_close': icon_close|default({}),
  'icon_language': icon_language|default({}),
  'icon_language_generic': icon_language_generic|default({}),
  'logo': logo|default({}),
  'languages': languages|default([]),
  'messages': messages|default({}),
  'extra_classes': extra_classes|default(''),
  'extra_attributes': extra_attributes|default([]),
  'system': 'ec'
} only %}
