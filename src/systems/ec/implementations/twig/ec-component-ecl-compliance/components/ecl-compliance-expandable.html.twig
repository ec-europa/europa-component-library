{#
  Parameters:
    - id: (string),
    - label_expanded: (string)
    - label_collapsed: (string)
    - button: (object)
    - content: (string)
#}

{% extends "@ecl-twig/ec-component-ecl-compliance/ecl-compliance.html.twig" %}

{% set message = '' %}
{% set component = 'expandable' %}
{% set no_id_case = id is not defined or id is empty %}
{% set no_content_case = content is not defined or content is empty %}
{% set no_label_collapsed_case = label_collapsed is not defined or label_collapsed is empty %}
{% set no_label_expanded_case = label_expanded is not defined or label_expanded is empty %}
{% set no_icon_path_case = button.icon.path is not defined or button.icon.path is empty %}

{% set not_compliant =
  no_id_case or
  no_label_collapsed_case or
  no_label_expanded_case or
  no_icon_path_case
%}

{% if no_id_case %}
  {% set message = message ~ ' {{ id }} property needs to set and filled in to make the component work.' %}
{% endif %}
{% if no_content_case %}
  {% set message = message ~ ' {{ content }} property needs to be set and filled in to make the component work.' %}
{% endif %}
{% if no_label_collapsed_case %}
  {% set message = message ~ ' {{ label_collapsed }} property needs to be set and filled in.' %}
{% endif %}
{% if no_label_expanded_case %}
  {% set message = message ~ ' {{ label_expanded }} property needs to be set and filled in.' %}
{% endif %}
{% if no_icon_path_case %}
  {% set message = message ~ ' {{ button.icon.path }} property needs to be set and filled in to be able to retrieve the icons file.' %}
{% endif %}
