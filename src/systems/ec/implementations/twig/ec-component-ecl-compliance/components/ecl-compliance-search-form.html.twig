{#
  Parameters:
  - "button": (object)
#}

{% extends "@ecl-twig/ec-component-ecl-compliance/ecl-compliance.html.twig" %}

{% set message = '' %}
{% set component = 'search-form' %}

{% set no_icon_path_case = button.icon.path is not defined or button.icon.path is empty %}
{% set no_button_label_case = button.label is not defined or button.label is empty %}
{% set not_compliant = no_icon_path_case or no_button_label_case %}
{% if no_button_label_case %}
  {% set message = message ~ ' {{ button.label }} needs to be set and filled in.' %}
{% endif %}
{% if no_icon_path_case %}
  {% set message = message ~ ' {{ button.icon_path }} needs to be set and filled in to render the search button icon.' %}
{% else %}
  {% set icon_path = button.icon.path %}
{% endif %}


