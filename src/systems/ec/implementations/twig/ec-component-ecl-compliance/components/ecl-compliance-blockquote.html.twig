{#
  Parameters:
    citation (string),
    author (string)
#}

{% extends "@ecl-twig/ec-component-ecl-compliance/ecl-compliance.html.twig" %}

{% set component = 'blockquote' %}
{% set message = '' %}
{% set no_author = author is not defined or author is empty %}
{% set no_quote = citation is not defined or citation is empty %}
{% set not_compliant = no_author or no_citation %}
{% if no_author %}
  {% set message = message ~ 'The {{ author }} of the quote is mandatory.' %}
{% endif %}
{% if no_quote %}
  {% set message = message ~ ' The {{ citation }} is mandatory.' %}
{% endif %}
