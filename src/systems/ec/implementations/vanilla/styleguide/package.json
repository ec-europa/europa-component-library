{
  "private": "true",
  "name": "@ecl/ec-styleguide",
  "author": "European Commission",
  "license": "EUPL-1.1",
  "version": "1.1.0",
  "description": "ECL EC Styleguide based on Fractal",
  "scripts": {
    "build:preset": "cd ../packages/ec-preset-website && npm run build",
    "build:tokens": "cd ../../design-tokens && npm run build",
    "clean": "rimraf ./static/ec-preset-website ../packages/_imports",
    "copy:preset": "ncp ../packages/ec-preset-website/dist ./static/ec-preset-website",
    "copy:templates": "copyfiles -f '../../../../../../node_modules/@ecl/generic-*/**/*.twig' ../packages/_imports",
    "dist": "npm run clean && npm run copy:preset && npm run copy:templates && cross-env NODE_ENV=production fractal build",
    "serve": "fractal start --sync",
    "start": "npm-run-all clean copy:templates build:preset --parallel serve watch:*",
    "watch:preset": "cd ../packages/ec-preset-website && npm run watch",
    "watch:templates": "chokidar \"../../../../../../src/generic/**/*.twig\" --c \"npm run copy:templates\"",
    "watch:tokens": "chokidar \"../../design-tokens/**/*.yml\" --c \"npm run build:tokens\""
  },
  "devDependencies": {
    "@ecl/ec-preset-website": "^1.2.0",
    "@ecl/fractal-theme": "^1.1.0",
    "@ecl/fractal-twig": "^1.0.1",
    "@frctl/fractal": "1.1.7",
    "chokidar-cli": "1.2.0",
    "copyfiles": "2.0.0",
    "cross-env": "5.2.0",
    "ncp": "2.0.0",
    "npm-run-all": "4.1.3",
    "rimraf": "2.6.2"
  },
  "main": "fractal.js",
  "fractal": {
    "main": "fractal.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ec-europa/europa-component-library.git"
  },
  "bugs": {
    "url": "https://github.com/ec-europa/europa-component-library/issues"
  },
  "homepage": "https://github.com/ec-europa/europa-component-library#readme"
}
