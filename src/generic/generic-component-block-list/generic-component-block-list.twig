{#
  Parameters:
    - "title" (string) (default: 'Navigation'): for screen readers
    - "display" (string) (default: 'default'): can be 'default', 'tabs' or 'small'
    - "links" (array) (default: []): collection of @ecl/generic-component-link
    - "extra_classes" (string) (default: '')
    - "extra_attributes" (array) (default: []): format: [
        {
          "name" (string) (default: ''),
          "value" (string) (default: '')
        },
        ...
      ]
#}

{# Internal properties #}

{% set _title = title|default('Block list') %}
{% set _display = display|default('default') %}
{% set _list = links|default([]) %}
{% set _css_class = 'ecl-block-list-wrapper' %}
{% set _extra_attributes = '' %}

{# Internal logic - Process properties #}

{% if extra_classes is defined and extra_classes is not empty %}
  {% set _css_class = _css_class ~ ' ' ~ extra_classes %}
{% endif %}

{% if extra_attributes is defined and extra_attributes is not empty and extra_attributes is iterable %}
  {% for attr in extra_attributes %}
    {% set _extra_attributes = _extra_attributes ~ ' ' ~ attr.name ~ '="' ~ attr.value ~ '"' %}
  {% endfor %}
{% endif %}

{# Print the result #}

tototo

{% if _list is not empty and _list is iterable %}
  Block list
{% endif %}
