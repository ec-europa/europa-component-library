{% spaceless %}

{#
  Parameters:
    - "items" (array) (default: []): array of display_list_item
    - "variant" (string) (default: 'vertical') (horizontal, vertical)
    - "zebra" (boolean) (default: true): use alternate background display for vertical list
    - "extra_classes" (string) (default: '')
    - "extra_attributes" (array) (default: []): format: [
        {
          "name" (string) (default: ''),
          "value" (optional) (string)
        ...
      ],
#}

{# Internal properties #}

{% set _items = items|default([]) %}
{% set _zebra = zebra|default(false) %}
{% set _css_class = 'ecl-display-list' %}
{% set _variant = variant|default('vertical') %}
{% set _extra_attributes = '' %}

{# Internal logic - Process properties #}

{% if _variant is not empty %}
  {% set _css_class = _css_class ~ ' ' ~ _css_class ~ '--' ~ _variant %}
{% endif %}

{% if _zebra %}
  {% set _css_class = _css_class ~ ' ' ~ 'ecl-display-list--zebra' %}
{% endif %}

{% if extra_classes is defined and extra_classes is not empty %}
  {% set _css_class = _css_class ~ ' ' ~ extra_classes %}
{% endif %}

{% if extra_attributes is defined and extra_attributes is not empty and extra_attributes is iterable %}
  {% for attr in extra_attributes %}
    {% if attr.value is defined %}
      {% set _extra_attributes = _extra_attributes ~ ' ' ~ attr.name|e('html_attr') ~ '="' ~ attr.value|e('html_attr') ~ '"' %}
    {% else %}
      {% set _extra_attributes = _extra_attributes ~ ' ' ~ attr.name|e('html_attr') %}
    {% endif %}
  {% endfor %}
{% endif %}

{# Print the result #}

{% if _items is not empty and _items is iterable %}
  <div class="{{ _css_class }}"{{ _extra_attributes|raw }}>
    {%- for _item in _items %}
      {% include '@ecl/display-list/display-list-item.html.twig' with _item only %}
    {% endfor -%}
  </div>
{% endif %}

{% endspaceless %}
