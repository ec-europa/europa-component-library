{#
  Parameters:
    title: (string),
    breadcrumb: (object)
#}

{% extends "@ecl/@compliance/@checker.html.twig" %}

{% set message = '' %}
{% set component = 'page-header' %}
{% set no_title_case = title is empty %}
{% set no_breadcrumb_case = breadcrumb is empty or breadcrumb.links is not defined %}

{% set not_compliant = no_title_case or no_breadcrumb_case %}

{% if no_title_case %}
  {% set message = message ~ ' {{ title }} needs to set and filled in.' %}
{% endif %}
{% if no_breadcrumb_case %}
  {% set message = message ~ ' {{ breadcrumb }} is mandatory, it should contain a breadcrumb object.' %}
{% endif %}
