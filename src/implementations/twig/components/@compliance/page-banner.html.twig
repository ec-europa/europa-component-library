{#
  Parameters:
    type: (string)
    image: (string)
    title (string)
#}

{% extends "@ecl/@compliance/@checker.html.twig" %}

{% set message = '' %}
{% set component = 'page-banner' %}
{% set no_image_case = false %}
{% set no_title_case = title is empty %}
{% set variant = type|default('') %}

{% if type in ['image', 'image-shade'] %}
  {% set no_image_case = image is not defined or image is empty %}
{% endif %}

{% set not_compliant = no_image_case or no_title_case %}

{% if no_image_case %}
  {% set message = message ~ ' When type is ' ~ type ~ ', the {{ image }} property needs to be set and filled in.' %}
{% endif %}
{% if no_title_case %}
  {% set message = message ~ ' {{ title }} property needs to be set and filled in.' %}
{% endif %}



