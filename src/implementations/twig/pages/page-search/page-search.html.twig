<!-- Site header -->
{% include '@ecl/site-header/site-header.html.twig' with site_header %}

<main class="ecl-u-bg-background ecl-u-pb-3xl">
  <div class="ecl-container">
    <!-- Page header -->
    {% include '@ecl/page-header/page-header.html.twig' with page_header %}

    <div class="ecl-row">
      <div class="ecl-col-12 ecl-col-l-3">
        <h2 class="ecl-u-type-heading-2">Filters</h2>

        <form>
          {%- include '@ecl/form-group/form-group.html.twig' with text_input|merge({
            extra_classes: 'ecl-u-mb-xl',
          }) -%}
